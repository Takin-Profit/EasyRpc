{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "pretty": true,
    "noEmitOnError": true,
    "target": "ESNext",
    "lib": [
      "ESNext"
    ],
    "module": "es2020",
    "rootDir": "./",
    "moduleResolution": "Node",
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "declarationMap": true,
    "outFile": "./",
    "outDir": "./",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules"
  ]
}
